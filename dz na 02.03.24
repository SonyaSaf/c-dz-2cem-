#include <iostream>
using namespace std;
int main()
{
    int a;
    cout << "Введите число" << endl;
    cin >> a;
    int s = 0;
    while (a!=0){
        int h = a%10;
        a = a/10;
        s = s+h;
    }
    cout << "сумма цифр: " << s << endl;
    return 0;
}


